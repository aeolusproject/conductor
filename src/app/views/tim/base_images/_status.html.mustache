{{#images}}
  <li class="clearfix">
    <dl>
      <dt>
        <div class="build-actions">
          <h3>{{provider_type.name}}</h3>
          {{#delete_url.present?}}
            <%= button_to(t('tim.base_images.show.delete'),
              '{{delete_url}}',
              :method => :delete) %>
          {{/delete_url.present?}}
          {{#build_url.present?}}
            <%= button_to(t('tim.base_images.show.build'),
              '{{build_url}}',
              :method => :post) %>
          {{/build_url.present?}}
          {{#only_status.present?}}
            {{status}}
            {{#progress.present?}}
              ({{progress}}%)
            {{/progress.present?}}
          {{/only_status.present?}}
          <br>
          {{#failed_attempts.present?}}
            ({{failed_attempts}})
          {{/failed_attempts.present?}}
        </div>
      </dt>
      <dd>
        <table class="light_table">
          <thead>
            <tr><th>
              <strong><%= t('tim.base_images.show.account') %></strong>
            </th>
            <th>
              <%= t('tim.base_images.show.provider') %>
            </th>
            <th>
              <%= t('tim.base_images.show.providers_image_id') %>
            </th>
            <th class="image_controls"></th>
          </tr></thead>
          <tbody>
          {{#provider_images}}
            <tr>
              <td><strong> {{provider_account.name}} </strong></td>
              <td class="light">{{provider.name }} </td>
              <td class="light">{{provider_image.external_image_id}}</td>
              <td class="light">
              {{#pimg_delete_url.present?}}
                <%= button_to(t('tim.base_images.show.delete'),
                  '{{pimg_delete_url}}',
                  :method => :delete) %>
              {{/pimg_delete_url.present?}}
              {{#pimg_push_url.present?}}
                <%= button_to(t('tim.base_images.show.push'),
                  '{{pimg_push_url}}',
                  :method => :post) %>
              {{/pimg_push_url.present?}}
              {{#pimg_only_status.present?}}
                {{status}}
                {{#pimg_progress.present?}}
                  ({{pimg_progress}}%)
                {{/pimg_progress.present?}}
              {{/pimg_only_status.present?}}
              {{#pimg_failed_attempts.present?}}
                {{pimg_failed_attempts}}
              {{/pimg_failed_attempts.present?}}
              </td>
            </tr>
          {{/provider_images}}
          </tbody>
        </table>
      </dd>
    </dl>
  </li>
{{/images}}
