= render :partial => 'layouts/admin_nav'
%header.page-header
  .obj_actions
    .return_to
      =t'return_to'
      = link_to t('provider_accounts.new.cloud_providers'), edit_provider_path(@provider, :details_tab => 'accounts')
  %h1.provider_accounts= @title

%section.content-section
  %header
    %h2.settings=t'settings.settings'

  .content
    = conductor_form_for(@provider_account, :error_partial => 'layouts/error_messages', :url => provider_provider_account_path(@provider_account)) do |f|
      = render :partial => "form", :locals => { :form => f }
      = f.button :form_buttons, :cancel => edit_provider_path(@provider, :details_tab => 'accounts')
