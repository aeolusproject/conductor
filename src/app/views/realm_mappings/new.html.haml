= render :partial => 'layouts/admin_nav'
%header.page-header
  %h1.realms= @title

%section.content-section
  - if @realm_target.errors.any?
    = render 'layouts/error_messages', :object => @realm_target

  = form_for @realm_target, :url => realm_mappings_path, :html => {:class => 'generic'} do |f|
    = f.hidden_field :frontend_realm_id
    = f.hidden_field :provider_realm_or_provider_type

    %fieldset
      .field
        - label_method = @realm_target.provider_realm_or_provider_type == 'ProviderRealm' ? 'name_with_provider' : 'name'
        = select_tag 'realm_backend_target[provider_realm_or_provider_id]', options_from_collection_for_select(@backend_targets, 'id', label_method)

    %fieldset.options
      = f.submit t("save"),  :class => "submit button"
      = link_to t(:cancel), frontend_realm_path(@realm_target.frontend_realm_id), :class => 'button danger'
