= render :partial => 'layouts/admin_nav'
%header.page-header
  .obj_actions
    .return_to
      =_('Return to:')
      = link_to _('Cloud Providers'), provider_path(@provider, :details_tab => 'accounts')
  %h1.provider_accounts= @title

%section.content-section
  %header
    %h2.settings=_('Settings')

  .content
    = conductor_form_for(@provider_account, :error_partial => 'layouts/error_messages', :url => provider_provider_account_path(@provider_account.provider, @provider_account)) do |f|
      = render :partial => "form", :locals => { :form => f }
      = f.button :form_buttons, :cancel => provider_path(@provider, :details_tab => 'accounts')
